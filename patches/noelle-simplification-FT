#!/bin/bash

installDir="`noelle-config`" ;

OPT="opt" ;

########### Analyses
AA_BASE="-basicaa"
EXTRA_LIBS="-load ${installDir}/lib/libSvf.so -load ${installDir}/lib/libCudd.so"


########### Transformations
TRANSFORMATIONS_BEFORE_PARALLELIZATION="${EXTRA_LIBS} ${AA_BASE} -mem2reg -simplifycfg -simplifycfg-sink-common=false  -tailcallelim -loop-simplify -lcssa -licm -loop-unswitch -globalopt  -ipsccp -dce -gvn -dse -adce -loop-simplify -lcssa -indvars -loop-deletion  -indvars -break-constgeps -lowerswitch -mergereturn --break-crit-edges -loop-simplify -lcssa "

cmdToExecute="${OPT} ${TRANSFORMATIONS_BEFORE_PARALLELIZATION} $@"
echo $cmdToExecute ;

eval $cmdToExecute 
